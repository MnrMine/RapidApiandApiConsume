@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="StaffName" class="form-control" />
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" asp-for="StaffTitle" class="form-control" />
    <br />
    <label>Personel Resim</label>
    <input type="text" asp-for="StaffImage" class="form-control" />
    <br />
    <label>Sosyal Medya 1</label>
    <input type="text" asp-for="StaffSocialMedia1" class="form-control" />
    <br />
    <label>Sosyal Medya 2</label>
    <input type="text" asp-for="StaffSocialMedia2" class="form-control" />
    <br />
    <label>Sosyal Medya 3</label>
    <input type="text" asp-for="StaffSocialMedia3" class="form-control" />
    <br />
    <button class="btn btn-primary">Personeli Ekle</button>
</form>

